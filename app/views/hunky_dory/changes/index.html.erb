<h1>Changes</h1>

<div class='row'>
  <div class='col-md-10'>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Summary</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @changes.each do |change| %>
          <tr>
            <td><%= link_to change.summary, change %></td>
            <td><%= link_to 'Edit', edit_change_path(change) %></td>
            <td><%= link_to 'Destroy', change, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class='col-md-2' style='text-align: center;'>
    <%= link_to 'New Change', new_change_path, class: 'btn btn-primary', style: 'margin-top: 6px' %>
  </div>
</div>
